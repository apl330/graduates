	</aop:config> -->


	<bean id="repository"
		class="com.dayatang.spring.repository.EntityRepositoryHibernate">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean id="gradApplication" class="org.projects.graduates.app.impl.GradApplicationImpl">
	</bean>

</beans>
